{
  "name": "tacomawedge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "lint": "eslint ./",
    "pretty": "prettier --write .",
    "serve": "next start",
    "start": "next dev"
  },
  "prettier": "@bjeco/prettier-config",
  "stylelint": {
    "extends": "@bjeco/stylelint-config"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss,sass,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "4.6.1",
    "fathom-client": "3.4.1",
    "next": "12.1.5",
    "normalize.css": "8.0.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "sanitize.css": "12.0.1"
  },
  "devDependencies": {
    "@bjeco/prettier-config": "*",
    "@bjeco/stylelint-config": "*",
    "eslint": "8.14.0",
    "eslint-config-next": "12.1.5",
    "husky": "7.0.4",
    "lint-staged": "12.4.0",
    "prettier": "2.6.2",
    "sass": "1.50.1",
    "stylelint": "14.7.1"
  },
  "packageManager": "yarn@3.2.0"
}
