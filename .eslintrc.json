{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:unicorn/recommended",
    "next",
    "prettier"
  ],
  "plugins": ["unicorn", "json-format"],
  "ignorePatterns": ["/*", "!/src", "!package.json", ".pnp.*", "node_modules"],
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "kebabCase": true,
          "pascalCase": true
        }
      }
    ]
  }
}
